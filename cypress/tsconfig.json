{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../src/**/*.js",
    "../src/**/*.jsx",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": ["dist"]
}
